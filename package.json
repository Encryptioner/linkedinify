{
  "name": "linkedinify",
  "version": "1.0.0",
  "description": "Convert Markdown to LinkedIn posts offline. Privacy-first, AI-powered, and works everywhere.",
  "main": "src/js/app.js",
  "type": "module",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "PORT=3004 vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .js,.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts,html,css,md}\"",
    "serve": "http-server dist -p 8080 -c-1",
    "deploy": "pnpm run build && gh-pages -d dist",
    "prepare": "husky install",
    "check": "pnpm run lint && pnpm run build"
  },
  "keywords": [
    "markdown",
    "linkedin",
    "converter", 
    "pwa",
    "offline",
    "privacy-first",
    "ai-powered",
    "social-media",
    "productivity"
  ],
  "author": {
    "name": "Ankur Mursalin",
    "email": "mir.ankur.ruet13@gmail.com",
    "url": "https://github.com/encryptioner"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/encryptioner/linkedinify.git"
  },
  "bugs": {
    "url": "https://github.com/encryptioner/linkedinify/issues"
  },
  "homepage": "https://encryptioner.github.io/linkedinify",
  "devDependencies": {
    "@vitejs/plugin-legacy": "^4.1.1",
    "@vitest/ui": "^0.34.6",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.3",
    "http-server": "^14.1.1",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "terser": "^5.24.0",
    "vite": "^4.5.0",
    "vite-plugin-pwa": "^0.16.7",
    "vitest": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "workbox-precaching": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0"
  },
  "dependencies": {
    "marked": "^9.1.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,md,json}": [
      "prettier --write"
    ]
  }
}